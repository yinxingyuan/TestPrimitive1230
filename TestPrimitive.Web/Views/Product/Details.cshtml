@model TestPrimitive.Web.Models.ProductModel

@{
    ViewBag.Title = "Details";
    Layout  = "~/Views/Shared/_Layout.cshtml";
}

<div class="m_title_box">
    <ol>
        <li data-id="Product">
            <a href="#">Product</a><i class="icon-arrowright"></i>
        </li>
        <li data-id="Details">Details</li>
    </ol>
</div>
<div class="panel panel-default">
    <div class="panel-body">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="col-md-4 from-title" >Name</label>
						<div class="col-md-8 from-cont">
							@Html.DisplayFor(model => model.Name)
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="col-md-4 from-title" >Description</label>
						<div class="col-md-8 from-cont">
							@Html.DisplayFor(model => model.Description)
						</div>
					</div>
				</div>
			</div><div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="col-md-4 from-title" >Sex</label>
						<div class="col-md-8 from-cont">
							@Html.DisplayFor(model => model.Sex)
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="col-md-4 from-title" >Price</label>
						<div class="col-md-8 from-cont">
							@Html.DisplayFor(model => model.Price)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="col-md-4 from-title" >CreateTime</label>
						<div class="col-md-8 from-cont">
							@(this.Model.CreateTime == DateTime.MinValue ? String.Empty : this.Model.CreateTime.ToShortDateString())
						</div>
					</div>
				</div>
			</div>
    </div>
    <div class="width_100 text-center m_left">
        @Html.ActionLink("Back to List", "Index",null,new { @class="m_btn m_back"})
    </div>

</div>
